
@{
    ViewBag.Title = "Add";
}

<center><h2>Add New Assay to Catalog Bank</h2></center>

<div class="row">
    <div class="col-sm-10 col-sm-offset-1">
        <form>
            <div class="panel panel-primary">
                <div class="panel-heading">
                    <h3 style="margin: 0px;"><input type="text" class="form-control" placeholder="Assay Name" /></h3>
                </div>
                <div class="panel-body">
                    <legend>
                        Needed Tests
                    </legend>
                    <textarea class="form-control" rows="4" id="textArea" style="width: 500px;"></textarea>
                    <p><br></p>

                    <legend>
                        Length of Test
                    </legend>
                    <div class="row">
                        <div class="col-sm-1">
                            <p>
                                <strong>Days:</strong>
                            </p>
                        </div>
                        <div class="col-sm-2">
                            <input class="form-control" type="number" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-sm-1">
                            <p>
                                <strong>Hours:</strong>
                            </p>
                        </div>
                        <div class="col-sm-2">
                            <input class="form-control" type="number" />
                        </div>
                    </div>
                    <p><br></p>

                    <legend>
                        Protocol
                    </legend>
                    <textarea class="form-control" rows="4" id="textArea" style="width: 500px;"></textarea>
                    <p><br></p>

                    <legend>
                        Materials
                    </legend>
                    <textarea class="form-control" rows="4" id="textArea" style="width: 500px;"></textarea>
                    <hr />
                    <center>@Html.ActionLink("Save", "List", "Catalog", null, new { @class="btn btn-primary"  })</center>
                </div>
            </div>
        </form>
    </div>
</div>